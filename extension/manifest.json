{
  "name": "Fantasy420",
  "description": "Tools for fantasy football",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "typescriptServices.js",
        "content_script.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "extensions/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://fantasy420.web.app/*",
      "https://sleeper.com/draft/nfl/*",
      "*://fantasy.espn.com/football/*",
      "*://www.reddit.com/r/fantasyfootball/*"
    ]
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://sportsbook-us-ny.draftkings.com/*"
  ],
  "manifest_version": 3
}
